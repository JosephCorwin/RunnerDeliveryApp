             <ul class="secondary-nav">
               <li class="page-link"><%= link_to "Users",  users_path  %></li>
               <li class="page-link"><%= link_to "Orders", orders_path %></li>
               <li class="page-link"><%= link_to "Stores", stores_path %></li>
               <li class="page-link"><%= link_to "Items",  items_path  %></li>
             <ul>

            <% end %>

          <% else %>

            <div class="login-items">
              <%= link_to "Login", login_path,:class => "login" %>
            </div>

          <% end %>


